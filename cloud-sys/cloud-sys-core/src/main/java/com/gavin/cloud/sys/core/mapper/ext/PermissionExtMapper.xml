<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.gavin.cloud.sys.core.mapper.ext.PermissionExtMapper">

    <resultMap id="BaseResultMap" type="com.gavin.cloud.sys.pojo.Permission">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="code" jdbcType="VARCHAR" property="code"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="type" jdbcType="VARCHAR" property="type"/>
        <result column="icon" jdbcType="VARCHAR" property="icon"/>
        <result column="url" jdbcType="VARCHAR" property="url"/>
        <result column="seq" jdbcType="SMALLINT" property="seq"/>
        <result column="is_parent" jdbcType="BIT" property="isParent"/>
        <result column="parent_id" jdbcType="BIGINT" property="parentId"/>
    </resultMap>

    <sql id="Base_Column_List">
        a.id, a.code, a.`name`, a.`type`, a.icon, a.url, a.seq, a.is_parent, a.parent_id
    </sql>

    <select id="getPerms" parameterType="map" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
          FROM sys_permission a
     LEFT JOIN sys_role_permission b ON a.id = b.permission_id
     LEFT JOIN sys_user_role c ON b.role_id = c.role_id
         WHERE c.user_id = #{uid}
           AND a.type = #{type}
    </select>

    <select id="getById" parameterType="long" resultType="com.gavin.cloud.sys.pojo.vo.PermissionVO">
        SELECT <include refid="Base_Column_List"/>,
               b.name AS parentName
          FROM sys_permission a LEFT JOIN sys_permission b
            ON a.parent_id = b.id
         WHERE a.id = #{id}
    </select>

</mapper>
